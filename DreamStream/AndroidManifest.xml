<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.AridRayne.DreamStream"
    android:versionCode="1"
    android:versionName="0.0.1-SNAPSHOT" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:required="true" android:name="android.software.live_wallpaper"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name="com.AridRayne.DreamStream.DreamStreamService" >
            <intent-filter>
                <action android:name="android.service.dreams.DreamService" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:resource="@xml/dream_stream" android:name="android.service.dream"/>
        </service>

        <activity
            android:name="com.AridRayne.DreamStream.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <service android:label="DreamStream" android:enabled="true" android:permission="android.permission.BIND_WALLPAPER" android:name="LiveWallpaperService">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService"/>
            </intent-filter>
            <meta-data android:resource="@xml/wallpaper" android:name="android.service.wallpaper"/>
        </service>
    </application>

</manifest>